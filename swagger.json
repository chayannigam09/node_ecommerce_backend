  "paths": {
    "user/register": {
      "post": {
        "summary": "Register new user",
        "tags":["User"],
        "description": "Register new user",
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that we wanna Register",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstname":{
                    "type":"string"
                },
                "lastname":{
                    "type":"string"
                },
                "mobile":{
                    "type":"integer"
                },
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User successfully registerd"
          },
          "400": {
            "description": "Error"
          }
        }
      }
    },
    "user/login": {
      "post": {
        "summary": "User Login",
        "tags":["User"],
        "description": "Login to your account",
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User that wants to log in",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully logged in",
            "schema": {
              "type": "array"
            }
          },
          "400": {
            "description": "Invalid status value"
          }
        }
      }
    },
    "user/admin-login": {
      "post": {
        "summary": "Admin Login",
        "tags":["User"],
        "description": "Login to your account",
        "produces": ["application/json"],
        "consumes": ["application/json"],
        "parameters": [
          {
            "name": "Admin",
            "in": "body",
