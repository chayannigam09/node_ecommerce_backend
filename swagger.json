{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Node Ecommerce",
    "security": [{ "bearerAuth": [] }],
    "description": "Node Ecommerce Application APIs"
  },
  "host": "node-ecommerce-backend-51eb.onrender.com/api/",
  "basePath": "/",
  "schemes": ["http","https"],
  "securityDefinitions": {
    "APIKey": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },

  "consumes": ["application/json"],
  "produces": ["application/json"],
  "security": [
    {
      "APIKey": []
    }
